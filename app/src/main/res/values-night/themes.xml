<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pract3Class" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/pink</item>
        <item name="android:navigationBarColor">@color/pink</item>
    </style>

    <style name="Img" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/blue</item>
    </style>
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item> <!-- Text color -->
        <item name="android:padding">8dp</item> <!-- Padding for better touch area -->
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/darkGreen</item> <!-- Background tint -->
        <item name="android:textColor">@android:color/white</item> <!-- Text color -->
        <item name="android:padding">10dp</item> <!-- Padding for buttons -->
        <item name="android:layout_margin">4dp</item> <!-- Margin for buttons -->
    </style>
</resources>